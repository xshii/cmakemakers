{
  "name": "cmakemakers",
  "displayName": "CMakeMakers",
  "description": "Visual CMake configuration editor for VSCode",
  "version": "0.0.1",
  "publisher": "cmakemakers",
  "repository": {
    "type": "git",
    "url": "https://github.com/xshii/cmakemakers.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cmakemakers.openEditor",
        "title": "CMakeMakers: Open Config Editor",
        "category": "CMakeMakers"
      },
      {
        "command": "cmakemakers.generate",
        "title": "CMakeMakers: Generate CMakeLists.txt",
        "category": "CMakeMakers"
      },
      {
        "command": "cmakemakers.newProject",
        "title": "CMakeMakers: New Project from Template",
        "category": "CMakeMakers"
      }
    ],
    "customEditors": [
      {
        "viewType": "cmakemakers.configEditor",
        "displayName": "CMakeMakers Config Editor",
        "selector": [
          {
            "filenamePattern": "**/cmake/cmaker_config.yaml"
          }
        ],
        "priority": "default"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "cmakemakers.generate",
          "when": "resourceFilename == cmaker_config.yaml",
          "group": "cmakemakers"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "uuid": "^9.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "@types/uuid": "^9.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.1",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/vsce": "^2.19.0",
    "eslint": "^8.41.0",
    "glob": "^10.3.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  }
}
